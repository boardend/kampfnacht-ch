<div class="login-block">
  <div class="centered">
    <section class="login-section">

      <div class="top-buffer-20"></div>

      <div class="container login-container">
        <div class="row">
          <div class="col-xs-3 col-sm-1 col-md-3"></div>
          <div class="col-xs-6 col-sm-4 col-md-3">
            <div class="logo-container">
              <object type="image/svg+xml" data="img/logo.svg" class="svg-content"></object>
            </div>
          </div>
          <div class="col-xs-3 visible-xs"></div>
          <div class="clearfix visible-xs"></div>
          <div class="col-xs-1 visible-xs"></div>

          <div class="col-sm-1 visible-sm"></div>
          
          <div class="col-xs-10 col-sm-4 col-md-3">
            <div class="visible-xs top-buffer-10"></div>
            <form>
              <input id="login-form-mail" type="text" class="form-control" placeholder="Email adrässe" required autofocus>
              <input id="login-form-password" type="password" class="form-control" placeholder="Passwort" required>
              <label class="checkbox">
                <input id="login-form-remember" type="checkbox" value="remember-me" checked="checked"> iiloggt bliibe
              </label>
              <button id="login-form-submit" class="btn-custom btn btn-lg btn-block" type="submit"><span class="glyphicon glyphicon-chevron-right"/> iilogge<span class="glyphicon-right-spacer"></span></button>
              <button id="login-form-register" class="btn btn-lg btn-block " type="button"><span class="glyphicon glyphicon-chevron-down"/> <span class="button-text">registriere</span></button>
            </form>
          </div>
          <div class="col-xs-1 col-sm-2 col-md-3"></div>
        </div>

        <div class="row registration-container">
          <div class="col-xs-1 col-sm-1 col-md-3" />
          <div class="col-xs-10 col-sm-9 col-md-6">
            <div class="panel panel-default">
              <div class="panel-body">
                <form class="form-horizontal" role="form">
                  <div class="form-group">
                    <label for="register-form-user" class="col-sm-3 control-label"><strong>Benutzername</strong></label>
                    <div class="col-sm-9">
                      <input id="register-form-user" class="form-control" placeholder="Benutzername">
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="register-form-mail" class="col-sm-3 control-label">Email adrässe</label>
                    <div class="col-sm-9">
                      <input id="register-form-mail" type="email" class="form-control" placeholder="Email adrässe">
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="register-form-password-1" class="col-sm-3 control-label">Passwort zum 1.</label>
                    <div class="col-sm-9">
                      <input type="password" class="form-control" id="register-form-password-1" placeholder="Passwort">
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="register-form-password-2" class="col-sm-3 control-label">Passwort zum 2.</label>
                    <div class="col-sm-9">
                      <input type="password" class="form-control" id="register-form-password-2" placeholder="Passwort">
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                      <label class="checkbox">
                        <input id="register-form-remember" type="checkbox" value="remember-me" checked="checked"> iiloggt bliibe
                      </label>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                      <button class="btn btn-lg btn-primary" type="submit"><span class="glyphicon glyphicon-chevron-right"/> registriere<span class="glyphicon-right-spacer"></span></button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>

          <div class="col-xs-1 col-sm-2 col-md-3" />

        </div>
      </div>
      
      <div class="top-buffer-20"></div>

    </section>
